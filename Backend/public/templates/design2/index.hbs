                    {{else}}
                    <img src="https://images.unsplash.com/photo-1551650975-87deedd944c3?w=400&h=200&fit=crop" alt="{{title}}" class="project-image">
                    {{/if}}
                    <div class="project-content">
                        <h3 style="margin-bottom: 1rem; color: var(--text-primary);">{{title}}</h3>
                        <p style="color: var(--text-secondary); margin-bottom: 1rem;">{{description}}</p>
                        {{#if technologies}}
                        <div class="project-tech">
                            {{#each technologies}}
                            <span class="tech-tag">{{this}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                        {{#if projectUrl}}
                        <a href="{{projectUrl}}" class="btn btn-primary" style="margin-top: 1rem;" target="_blank" rel="noopener noreferrer">
                            <i class="fas fa-external-link-alt"></i>
                            View Project
                        </a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    {{/if}}

    <!-- Certifications Section -->
    {{#if certifications}}
    <section id="certifications" class="section" style="background: var(--surface);">
        <div class="container">
            <h2 class="section-title fade-in">Certifications</h2>
            <p class="section-subtitle fade-in">
                Professional certifications and achievements.
            </p>
            <div class="projects-grid">
                {{#each certifications}}
                <div class="project-card fade-in">
                    <div class="project-content">
                        <h3 style="margin-bottom: 1rem; color: var(--text-primary);">{{name}}</h3>
                        <p style="color: var(--text-secondary); margin-bottom: 1rem;">Issued by: {{issuer}}</p>
                        <p style="color: var(--text-secondary); margin-bottom: 1rem;">Date: {{formatDate date}}</p>
                        {{#if credentialUrl}}
                        <a href="{{credentialUrl}}" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                            <i class="fas fa-certificate"></i>
                            View Credential
                        </a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    {{/if}}

    <!-- Contact Section -->
    <section id="contact" class="section">
        <div class="container">
            <h2 class="section-title fade-in">Get In Touch</h2>
            <p class="section-subtitle fade-in">
                Ready to start your next project? Let's discuss how I can help bring your ideas to life.
            </p>
            <div class="contact-content">
                <div class="contact-info fade-in">
                    {{#if personalInfo.email}}
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <h4 style="color: var(--text-primary);">Email</h4>
                            <p style="color: var(--text-secondary);">{{personalInfo.email}}</p>
                        </div>
                    </div>
                    {{/if}}
                    {{#if personalInfo.phone}}
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div>
                            <h4 style="color: var(--text-primary);">Phone</h4>
                            <p style="color: var(--text-secondary);">{{personalInfo.phone}}</p>
                        </div>
                    </div>
                    {{/if}}
                    {{#if personalInfo.address}}
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div>
                            <h4 style="color: var(--text-primary);">Location</h4>
                            <p style="color: var(--text-secondary);">{{personalInfo.address}}</p>
                        </div>
                    </div>
                    {{/if}}
                    {{#if personalInfo.website}}
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-globe"></i>
                        </div>
                        <div>
                            <h4 style="color: var(--text-primary);">Website</h4>
                            <p style="color: var(--text-secondary);">{{personalInfo.website}}</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="contact-form fade-in">
                    <form style="display: flex; flex-direction: column; gap: 1rem;">
                        <input type="text" placeholder="Your Name" 
                               style="padding: 1rem; border: 1px solid var(--border); border-radius: 0.5rem; background: var(--background); color: var(--text-primary);">
                        <input type="email" placeholder="Your Email" 
                               style="padding: 1rem; border: 1px solid var(--border); border-radius: 0.5rem; background: var(--background); color: var(--text-primary);">
                        <input type="text" placeholder="Subject" 
                               style="padding: 1rem; border: 1px solid var(--border); border-radius: 0.5rem; background: var(--background); color: var(--text-primary);">
                        <textarea placeholder="Your Message" rows="5" 
                                  style="padding: 1rem; border: 1px solid var(--border); border-radius: 0.5rem; background: var(--background); color: var(--text-primary); resize: vertical;"></textarea>
