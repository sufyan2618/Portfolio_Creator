                    <i class="fab fa-linkedin"></i>
                </a>
                {{/if}}
                {{#if personalInfo.github}}
                <a href="{{personalInfo.github}}" class="social-link" target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-github"></i>
                </a>
                {{/if}}
                {{#if personalInfo.twitter}}
                <a href="{{personalInfo.twitter}}" class="social-link" target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-twitter"></i>
                </a>
                {{/if}}
                {{#if socialLinks.facebook}}
                <a href="{{socialLinks.facebook}}" class="social-link" target="_blank" rel="noopener noreferrer">
                    <i class="fab fa-facebook"></i>
                </a>
                {{/if}}
                {{#if socialLinks.instagram}}
                <a href="{{socialLinks.instagram}}" class="social-link" target="_blank" rel="noopener noreferrer">
